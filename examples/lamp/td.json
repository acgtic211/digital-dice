                {
                    "op": [ "readproperty" ],
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/reachable",
                    "contentType": "application/json"
                }
            ]
        },
        "saturation": {
            "title": "Saturation Properties",
            "description": "Saturation is the amount of white light to mix with hue [0 is white and 254 is full color]",
            "type": "integer",
            "minimum": 0,
            "maximum": 254,
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/saturation",
                    "contentType": "application/json"
                }
            ]
        },
        "xyColorSpace": {
            "title": "XY Properties",
            "description": "XY color space of the light. Pure red is [0.675, 0.322], pure green is [0.5, 1], pure blue is [0.167, 0.04]",
            "type": "array",
            "items": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
            },
            "minItems": 2,
            "maxItems": 2,
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/xyColorSpace",
                    "contentType": "application/json"
