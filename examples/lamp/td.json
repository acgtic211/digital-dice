{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "@type": "virtual",
    "id": "colorlight_1:acg:lab",
    "title": "ACG Lab Color Light 1",
    "description": "Color light in ACG Lab",
    "properties": {
        "alertProperty": {
            "title": "Alert Properties",
            "description": "Properties of the alert (different colors or light patterns)\n- select: Light that flashes in short time intervals\n- lselect: Light that flashes in time long intervals\n- stop: Light stop flashing, but is on\n- blink: Light will flash one time when you send a request\n- none: Light without any alert",
            "type": "string",
            "enum": ["lselect", "stop", "blink", "select", "none"],
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/alertProperty",
                    "contentType": "application/json"
                }
            ]
        },
        "brightness": {
            "title": "Brightness Properties",
            "description": "Brightness is intensity of the light [0 is off and 254 is full brightness]",
            "type": "integer",
            "minimum": 0,
            "maximum": 254,
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/brightness",
                    "contentType": "application/json"
                }
            ]
        },
        "colorMode": {
            "title": "Color Mode Properties",
            "description": "Actual state of color mode of the light:\n- ct: Color Temperature\n- hs: Hue and Saturation\n- xy: XY Color Space",
            "type": "string",
            "enum": ["ct", "xy", "hs"],
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/colorMode",
                    "contentType": "application/json"
                }
            ]
        },
        "colorTemperature": {
            "title": "Color Temperature Properties",
            "description": "Color temperature (warmer and cooler spectrum) of the light. The lower the value, the warmer the color. The higher the value, the cooler the color.",
            "type": "integer",
            "minimum": 0,
            "maximum": 65279,
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/colorTemperature",
                    "contentType": "application/json"
                }
            ]
        },
        "hue": {
            "title": "Hue Properties",
            "description": "Hue is the color gradient of the light (0-65535). 0 is red, 25500 is green and 46920 is blue",
            "type": "integer",
            "minimum": 0,
            "maximum": 65535,
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/hue",
                    "contentType": "application/json"
                }
            ]
        },
        "status": {
            "title": "State of the light [On / Off]",
            "type": "boolean",
            "description": "On/Off state of the light. On = true, Off = false",
            "forms": [
                {
                    "href": "http://localhost:8063/colorlight_1:acg:lab/property/status",
                    "contentType": "application/json"
                }
            ]
        },
        "reachable": {
            "title": "Reachable Properties",
            "type": "boolean",
            "description": "Property that indicate if the light is reachable or not. Reachable = true, Not reachable = false",
