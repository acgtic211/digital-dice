{
  "thing_id": "acg:lab:virtual-containers",
  "timings": 10000,
  "default_values": {
    "serialNumber": 1001,
    "location": {
      "lat": "40.416775",
      "lng": "-3.703790"
    },
    "totalCapacity": 1000,
    "capacity": 250,
    "garbageClass": "general",
    "temperature": 22,
    "address": "Calle Principal 123",
    "fireDetected": false,
    "garbageCollected": false
  },
  "behaviour": [
    {
      "description": "Capacity increases over time as people throw garbage",
      "inputs": ["capacity", "totalCapacity"],
      "outputs": ["capacity"],
      "arithmeticExpression": {
        "eval_exp": "capacity < totalCapacity ? capacity + Math.random() * 5 : capacity"
      }
    },
    {
      "description": "Temperature fluctuates slightly with normal distribution",
      "inputs": [],
      "outputs": ["temperature"],
      "distribution": {
        "type": "normal",
        "mean": 22,
        "standard_deviation": 2
      }
    },
    {
      "description": "Fire is detected when temperature exceeds 50°C",
      "inputs": ["temperature"],
      "outputs": ["fireDetected"],
      "conditional": {
        "eval_exp": "temperature > 50",
        "value": true
      }
    },
    {
      "description": "Fire is extinguished when temperature drops below 50°C",
      "inputs": ["temperature"],
      "outputs": ["fireDetected"],
      "conditional": {
        "eval_exp": "temperature <= 50",
        "value": false
      }
    },
    {
      "description": "Temperature rises rapidly when fire is detected",
      "inputs": ["fireDetected", "temperature"],
      "outputs": ["temperature"],
      "conditional": {
        "eval_exp": "fireDetected == true",
        "value": "temperature + 3"
      }
    },
    {
      "description": "Garbage collection occurs randomly (simulating truck collection)",
      "inputs": [],
      "outputs": ["garbageCollected"],
      "list": {
        "values": [false, false, false, false, false, false, false, false, false, true],
        "index": 0
      }
    },
    {
      "description": "Container is emptied when garbage is collected",
      "inputs": ["garbageCollected", "capacity"],
      "outputs": ["capacity"],
      "conditional": {
        "eval_exp": "garbageCollected == true",
        "value": 0
      }
    },
    {
      "description": "Reset garbageCollected flag after collection",
      "inputs": ["garbageCollected", "capacity"],
      "outputs": ["garbageCollected"],
      "conditional": {
        "eval_exp": "capacity == 0 && garbageCollected == true",
        "value": false
      }
    },
    {
      "description": "Container capacity is affected by temperature - higher temperatures compact garbage",
      "inputs": ["temperature", "capacity"],
      "outputs": ["capacity"],
      "conditional": {
        "eval_exp": "temperature > 30 && temperature < 50",
        "value": "capacity * 0.99"
      }
    }
  ]
}