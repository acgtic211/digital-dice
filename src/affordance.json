{
  "thing_id": "urn:dev:acg:lab:environment_sensor",
  "timings": 5000,
  "default_values": {
    "temperature": 21,
    "light": 500,
    "motion": false,
    "battery": 100,
    "fire": false,
    "robberyDetected": false
  },
  "behaviour": [
    {
      "description": "Temperature fluctuates slightly over time with normal distribution",
      "inputs": [],
      "outputs": ["temperature"],
      "distribution": {
        "type": "normal",
        "mean": 21,
        "standard_deviation": 1.5
      }
    },
    {
      "description": "Light level follows daily pattern using a list of values",
      "inputs": [],
      "outputs": ["light"],
      "list": {
        "values": [50, 100, 200, 350, 500, 650, 800, 950, 1000, 950, 850, 700, 550, 400, 300, 200, 100, 50],
        "index": 0
      }
    },
    {
      "description": "Motion detection randomly activates and deactivates",
      "inputs": [],
      "outputs": ["motion"],
      "list": {
        "values": [false, false, false, false, true, true, false, false, false, true, false, false],
        "index": 0
      }
    },
    {
      "description": "Battery level slowly decreases over time",
      "inputs": ["battery"],
      "outputs": ["battery"],
      "arithmeticExpression": {
        "eval_exp": "battery > 0 ? battery - 0.01 : 0"
      }
    },
    {
      "description": "Fire detection is triggered when temperature exceeds 35°C",
      "inputs": ["temperature"],
      "outputs": ["fire"],
      "conditional": {
        "eval_exp": "temperature > 35",
        "value": true
      }
    },
    {
      "description": "Fire detection is deactivated when temperature is below 35°C",
      "inputs": ["temperature"],
      "outputs": ["fire"],
      "conditional": {
        "eval_exp": "temperature <= 35",
        "value": false
      }
    },
    {
      "description": "Robbery detection is triggered when motion is detected during night time",
      "inputs": ["motion", "light"],
      "outputs": ["robberyDetected"],
      "conditional": {
        "eval_exp": "motion == true && light < 200",
        "value": true
      }
    },
    {
      "description": "Robbery detection is reset when motion is no longer detected or it's daytime",
      "inputs": ["motion", "light"],
      "outputs": ["robberyDetected"],
      "conditional": {
        "eval_exp": "motion == false || light >= 200",
        "value": false
      }
    },
    {
      "description": "Temperature raises when fire is detected",
      "inputs": ["fire", "temperature"],
      "outputs": ["temperature"],
      "conditional": {
        "eval_exp": "fire == true",
        "value": 40
      }
    }
  ]
}
