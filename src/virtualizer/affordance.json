{
  "id": "sensor_001",
  "thing_id": "urn:dev:acg:lab:environment_sensor",
  "description": "Sensor de temperatura, luz y movimiento",
  "timings": 10000,
  "default_values": {
    "property.temperature": 22,
    "property.light": 1000,
    "property.motion": false,
    "property.battery": 100,
    "property.fire": false
  },
  "behaviour": [
    {
      "map": {
        "in": "property.temperature",
        "out": "property.temperature",
        "value": 22.5
      }
    },
    {
      "list": {
        "values": [22.5, 23.0, 23.5, 24.0],
        "index": 1,
        "out": "property.temperature"
      }
    },
    {
      "arithmeticExpression": {
        "eval_exp": "property.temperature * 1.5",
        "out": "property.temperature"
      }
    },
    {
      "conditional": {
        "eval_exp": "property.light < 700",
        "out": "property.light",
        "value": 700
      }
    },
    {
      "map": {
        "in": "property.motion",
        "out": "property.motion",
        "value": false
      }
    },
    {
      "conditional": {
        "eval_exp": "property.motion",
        "out": "property.light",
        "value": 500
      }
    },
    {
      "distribution": {
        "type": "normal",
        "mean": 500,
        "standard_deviation": 200,
        "out": "property.light"
      }
    },
    {
      "distribution": {
        "type": "discrete",
        "min": 20,
        "max": 30,
        "out": "property.temperature"
      }
    },
    {
      "conditional": {
        "eval_exp": "property.temperature >= 29",
        "out": "property.fire",
        "value": true
      }
    },
    {
      "conditional": {
        "eval_exp": "property.temperature < 29",
        "out": "property.fire",
        "value": false
      }
    }
  ]
}