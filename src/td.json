{
  "@context": ["https://www.w3.org/2019/wot/td/v1"],
  "id": "urn:dev:ops:virtual-computer-switch-001",
  "title": "Virtual Computer Switch",
  "description": "Este es un switch de ordenador virtual.",
  "@type": ["switch", "virtual"],
  "security": ["nosec_sc"],
  "securityDefinitions": {
    "nosec_sc": {
      "scheme": "nosec"
    }
  },
  "properties": {
    "status": {
      "type": "string",
      "enum": ["ON", "OFF"],
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/property/status",
          "contentType": "application/json",
          "op": ["readproperty", "writeproperty"]
        }
      ]
    },
    "connectedComputers": {
      "type": "integer",
      "minimum": 0,
      "description": "Número de computadoras actualmente conectadas.",
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/property/connectedComputers",
          "contentType": "application/json",
          "op": ["readproperty"]
        }
      ]
    },
    "powerConsumption": {
      "type": "number",
      "minimum": 0,
      "description": "Consumo de energía actual en vatios.",
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/property/powerConsumption",
          "contentType": "application/json",
          "op": ["readproperty"]
        }
      ]
    }
  },
  "actions": {
    "connectComputer": {
      "description": "Conecta una computadora al switch.",
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/action/connectComputer",
          "contentType": "application/json",
          "op": ["invokeaction"]
        }
      ]
    },
    "disconnectComputer": {
      "description": "Desconecta una computadora del switch.",
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/action/disconnectComputer",
          "contentType": "application/json",
          "op": ["invokeaction"]
        }
      ]
    },
    "reboot": {
      "description": "Reinicia el switch virtual.",
      "forms": [
        {
          "href": "http://localhost:8065/virtualcomputerswitch:acg:lab/action/reboot",
          "contentType": "application/json",
          "op": ["invokeaction"]
        }
      ]
    }
  }
}
